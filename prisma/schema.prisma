generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Admin{
    id String @id @unique @default(uuid())
    name String
    email String
    password String

    user User[] 


    

    @@map("admins")
}


model User{
  id String @id @unique @default(uuid())
  name String
  email String
  cargo String
 
  
  admin Admin? @relation(fields: [adminId], references: [id])
  adminId String?
  tasks Tasks[]


  @@map("users")

}


model Tasks{

  id String @id @unique @default(uuid())
  name String
  tipo String
  data String
 
  
  user User? @relation(fields: [userId], references: [id])
  userId String?

  
  
  @@map("tasks")
}


model TasksDeleted{

    id String @id @unique @default(uuid())

    name String
    tipo String
    data String
  @@map("tasksDeleted")


}

